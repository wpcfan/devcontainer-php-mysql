{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch application",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/index.php",
            "cwd": "${workspaceFolder}",
            "port": 8080
        },
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 8080
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 8080
        }
    ]
}